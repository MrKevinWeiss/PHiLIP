{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Nucleo Firmware",
            "type": "shell",
            "command": "BOARD=NUCLEOF103RB make -j8",
            "options": {
                "cwd": "${workspaceRoot}/FW"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []

        },
        {
            "label": "Load Firmware",
            "type": "shell",
            "command": "openocd -d1 -f NUCLEO-F103RB_Debug.cfg -c \"init;targets;halt;flash write_image erase NUCLEOF103RB/PHiLIP.hex;shutdown;\"",
            "options": {
                "cwd": "${workspaceRoot}/FW"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []

    ]
}